        <div class="card-body">

          <h5><a href=<%=residence_path(residence)%> class="card-title"><%=residence.nombre%></a></h5>
          <p class="card-text"><%=residence.descripcion%></p>
          <p class="card-text"><small class="text-muted"><%=residence.provincia%>, <%=residence.localidad%></small></p>

          <%= link_to 'Modificar', edit_residence_path(residence), class: 'btn btn-primary'%>
          <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#modificarEstado">Cambiar estado</button>
          <%= link_to 'Eliminar', residence, method: :delete, class: 'btn btn-outline-danger', data:{ confirm: '¿Estás seguro que querés eliminar esta residencia?'}%>
          <form action=<%= residence_estado_path(residence)%>>
            <div class="modal fade" id="modificarEstado" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Elegir semana</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                   <input type="hidden" name="residence_id" value=<%=residence.id%> />
                   <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">Fecha de inicio</span>
                    </div>
                    <input type="date" class="form-control" id="fechaInicio" name="fechaInicio" aria-describedby="basic-addon1" required>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                  <button type="submit" class="btn btn-primary">Modificar estado</button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>

  </div>
