<div class="container">
<h2>Lista de Subastadores para <%=@residence.nombre%>:</h2>
<hr>
<%alguien=false%>
<% AuctioneersList.all.each do |clientInList|%>
<%if ((clientInList.week_id==@week.id) and (Week.find(clientInList.week_id).residence_id)== (Week.find(@week.id).residence_id)) then %>
			<%alguien=true%>
       
               <%cliente=Client.find(clientInList.client_id)%>
               <p> <%=cliente.nombre%>, <%=cliente.apellido%></p>
               <hr>               
                  <%end%>

<%end%>
<%if alguien==false then%>
<p> No hay clientes en esta lista</p>
<%end%>

<%=link_to 'Volver', :back, class:"btn btn-secondary"%>
</div>