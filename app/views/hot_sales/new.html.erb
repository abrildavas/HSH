 <div class="card">
    <div class="shadow p-3 mb-5 bg-white rounded">
      <div class="card-body">
        <h5 class="card-title">Crear Hot Sale </h5>

        <%= form_for @hot_sale do |f| %>

  <div class="form-group row">
    <div class="col-sm-10">
      <div class="row">
            <div class="col-auto">
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                     <div class="input-group-append">
                  <span class="input-group-text" id="basic-addon1">Ingresar precio:</span>
                  <%= f.hidden_field :week_id, value: @week.id %>
      <%= f.number_field :precio, required: true, label:'Precio $ ', class: 'form-control' , 'aria-label': 'Amount (to the nearest dollar)',min:'1'%>
   
       <span class="input-group-text"> $ </span>
        </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

  <div class="form-group row">
    <div class="col-sm-10">  
      <a href=<%=week_dates_path(@week.id)%>, class="btn btn-outline-primary">Volver</a>
      <%= f.submit 'Guardar', class: "btn btn-primary"  %> 

    </div>
  </div>
 
 
 

<% end %>

        </div>
    </div>
  </div>  



